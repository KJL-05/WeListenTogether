/* pages/groupList/groupList.wxss */
.groupInfo {
  border-bottom: 1rpx solid rgb(112, 112, 112);
  padding: 20rpx 20rpx;
  display: flex;
  flex-direction: row;
  
}

.groupInfo image {
  height: 70rpx;
  width: 70rpx;
}

.topSearchBar {
  position: relative;
  -webkit-box-flex: 1;
  -webkit-flex: auto;
  flex: auto;
  border-radius: 5px;
  background: #FFFFFF;
  border: 1rpx solid #E6E6EA;
}
.iconfont{
  font-size: 60rpx;
}
.topSearchBar_box {
  position: relative;
  width: 100%;
  box-sizing: border-box;
  z-index: 1;
}

.title_bar{
  padding-top: 30rpx;
  padding-bottom: 30rpx;
  margin:  auto;

}
.title_bar .title_bar_container{
 text-align: center;
}
.title_bar .title_bar_container .title_content{
  margin: 0 30rpx;
}


.weui-search-bar__input {
  height: 28px;
  line-height: 28px;
  font-size: 14px;
}

.weui-search-bar__cancel-btn {
  margin-left: 10px;
  line-height: 28px;
  color: #09BB07;
  white-space: nowrap;
}

.topFun {
  position: relative;
  padding: 8px 10px;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  box-sizing: border-box;
  background-color: #EFEFF4;
  border-top: 1rpx solid #D7D6DC;
  border-bottom: 1rpx solid #D7D6DC;
}
.groupList .groupList_content{
  height: 100%;
  margin:auto auto auto 0;
}
.groupInfo .icon_join{
  margin: auto 0;
}
.groupInfo .icon_join .iconfont{
  font-size: 35rpx;
  /* 弹窗样式
