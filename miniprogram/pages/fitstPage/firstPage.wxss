/* 轮播图 */
.banners {
  width: 100%;
  height: 300rpx;
}

.banners image {
  width: 100%;
  height: 100%;
}

/* 总功能区 */
.navContainer {
  display: flex;
}

/* 左块 */
.left_block {
  display:flex;
  flex-direction: column;
  width:65%;
  margin: 0 auto;
  padding-top: 30rpx;
}

/* 右块 */
.right_block {
  /* display: flex;
  flex-direction: column;
  align-items: center; */
  width: 35%;
  margin: 0 auto;
  padding-top: 30rpx;
}

/* 右块功能区 */
.grpItem {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
  margin: 0 auto;
}

.grpItem .iconfont {
  width: 100rpx;
  height: 100rpx;
  border-radius: 30%;
  text-align: center;
  line-height: 100rpx;
  background: rgb(240, 19, 19);
  font-size: 50rpx;
  color: rgb(255, 255, 255);
  margin: 20rpx 0;
}

/* 左块显示区 */

/* 信息显示区 */
.grpInfoitem {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
  height: 150rpx;
  border-radius: 7%;
  background-color:#f5f5f5;
  font-size: 40rpx;
}

/* 最近播放区 */
.personalContent {
  background:#f5f5f5;
  margin-top: 20rpx;
  border-radius: 7%;
  height: 100%;
}

.title {
  padding-left: 20rpx;
  font-size: 26rpx;
  color: #333;
  line-height: 80rpx;
}

/* 最近播放记录滚动条 */
.recentScroll {
  display: flex;
  flex-direction: column;
  height:500rpx ;
  align-items: left;
}

.recentItem {
  margin: 10rpx;
  display: flex;
  flex-direction: row;
}

.recentItem image {
  width: 200rpx;
  height: 200rpx;
  border-radius: 10rpx;
}
.image {
  width: 50%;
  height: 200rpx;
}
.detail {
  width: 50%;
  height: 200rpx;
  display: flex;
  flex-direction: column;
}
.songer {
  color:darkblue;
}


