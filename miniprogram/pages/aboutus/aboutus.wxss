page {
  height: 100%;
  background-color: #F6F7FB;
}

.aboutus-container {
  height: 100%;
  display: flex;
  flex-direction: column;
}

.head-logo {
  height: 30%;
  background-color: #F6F7FB;
  display: flex;
  align-items: center;
  justify-content: center;
}

.head-logo image {
  width: 300rpx;
  height: 300rpx;
  border-radius: 50%;
}

.aubotus-box {
  height: 60%;
  background-color: white;
}

.aboutus-team {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 25%;
}

.memInfo-container {
  height: 75%;
  display: flex;
  justify-content: center;
}

.memInfo-scroll-container {
  margin: auto 0;
}

.member-box {

  display: flex;
  display: -webkit-box;
  flex-direction: column;
}

.aboutus-team text {
  font-size: 80rpx;
}

.memInfo {
  width: 400rpx;
  height: 300rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-right: 110rpx;
}

.memInfo image {
  width: 251rpx;
  height: 280rpx;
  border-radius: 50%;
}

.business-container {
  height: 10%;
  margin-top: 50rpx;
  background-color: white;
  display: flex;
  align-items: center;
}

.business-content {
  flex: 1 0 auto;
  font-size: 50rpx;
  margin-left: 50rpx;
}

.business-telnum {
  margin-right: 50rpx;
}